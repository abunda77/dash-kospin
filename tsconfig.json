{
    "compilerOptions": {
        "target": "es5",
        "module": "ESNext",
        "moduleResolution": "node",
        "baseUrl": "./",
        "paths": {
            "@/*": ["resources/js/*"]
        },
        "jsx": "preserve",
        "strict": true,
        "skipLibCheck": true,
        "noEmit": true
    },
    "include": ["resources/js/**/*.ts", "resources/js/**/*.tsx", "resources/js/**/*.vue"],
    "exclude": ["node_modules", "public"]
}
